.map {
  width: 690rpx;
  height: 622rpx;
  position: relative;
  border-radius: 12rpx;
  margin: 0 auto;
  box-sizing: border-box;
  background-image: linear-gradient(
    to bottom,
    rgba(223, 231, 255, 1),
    rgba(236, 241, 255, 0.8)
  );
  padding: 1rpx;
}

.map-container {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 72rpx 18rpx 20rpx 18rpx;
  box-sizing: border-box;
}

