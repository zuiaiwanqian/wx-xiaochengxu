.map-title {
  width: 326rpx;
  height: 58rpx;
  background: linear-gradient(90deg, #1653fa 10.74%, #4174ff 92.48%);
  position: absolute;
  left: -8rpx;
  top: 24rpx;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 58rpx;
  display: flex;
  align-items: center;
  color: #ffffff;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.map-title-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  margin-right: 4rpx;
  background-color: #ffffff;
}

.box {
  width: 690rpx;
  height: 620rpx;
  background-image: linear-gradient(
    180deg,
    rgba(223, 231, 255, 1),
    rgba(236, 241, 255, 0.8)
  );
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  overflow: hidden;
}
