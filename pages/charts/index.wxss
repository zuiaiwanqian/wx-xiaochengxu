.map {
  width: 690rpx;
  height: 622rpx;
  position: relative;
  border-radius: 12rpx;
  margin: 0 auto;
  padding: 72rpx 18rpx 20rpx 18rpx;
  box-sizing: border-box;
}

.map::after {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  border: 2rpx solid red;
  top: 0;
  left: 0;
  border-radius: 24rpx;
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
  pointer-events: none;
}

.map-title {
  width: 326rpx;
  height: 58rpx;
  background: linear-gradient(90deg, #1653fa 10.74%, #4174ff 92.48%);
  position: absolute;
  left: -8rpx;
  top: 24rpx;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 58rpx;
  display: flex;
  align-items: center;
  color: #ffffff;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.map-title-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  margin-right: 4rpx;
  background-color: #ffffff;
}

.border-image-clip-path {
  margin: 0 auto;
  margin-top: 40rpx;
  position: relative;
  width: 200px;
  height: 100px;
  border: 2rpx solid;
  border-image: linear-gradient(
      45deg,
      rgba(223, 231, 255, 1),
      rgba(236, 241, 255, 0.8)
    )
    1;
  clip-path: inset(0 round 12rpx);
}

.box {
  width: 100px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-radius: 5px;
  background-color: #ccc;
  background-size: 0 2px;
  transition: all 0.5s ease;
  background-position: center bottom;
}

.box:hover {
  background: #ccc linear-gradient(to right, blue, blue) no-repeat center bottom;
  background-size: 100% 2px;
}
