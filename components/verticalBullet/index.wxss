.y-bullet-list {
  display: flex;
  flex-direction: column;
  animation: colScroll 8s linear infinite;
  box-sizing: border-box;
}

@keyframes colScroll {
  0% {
    /* 为0时，ios会闪动 */
    transform: translateY(1);
  }

  100% {
    transform: translateY(var(--marqueeWidth--));
  }
}

.y-bullet-list-container {
  display: flex;
  flex-direction: column;
}

.y-bullet-single {
  width: 100%;
  height: 70rpx;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.y-bullet-single-avatar {
  width: 60rpx;
  height: 60rpx;
  background-color: seagreen;
  border-radius: 50%;
  margin-right: 12rpx;
}

.y-bullet-single-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.y-bullet-single-info__job {
  color: #262d3d;
  font-size: 24rpx;
  line-height: 36rpx;
}
.y-bullet-single-info__desc {
  font-size: 22rpx;
  line-height: 32rpx;
  color: #a1a3b3;
}
