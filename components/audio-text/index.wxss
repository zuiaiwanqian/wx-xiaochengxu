  font-size: 30rpx;
  line-height: 46rpx;
  letter-spacing: 0.4rpx;
  position: relative;
  font-weight: 500;
}
.main-audio {
  box-sizing: border-box;
  /* height: 102rpx; */
  /* background: brown; */
}
.audio {
  display: flex;
  height: 102rpx;
  background: #fff;
  box-sizing: border-box;
  border-radius: 12rpx;
  position: relative;
  padding: 0 24rpx;
  margin-bottom: 32rpx;
}
.audio::after {
 content: ''; 
