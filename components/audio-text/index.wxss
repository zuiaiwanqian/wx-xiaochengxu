.main {
  /* padding: 0 25rpx; */
  background: linear-gradient(180deg, #F1F5FF 0%, #F7F8FF 21.35%, #FFFFFF 100%);
  border-radius: 12rpx;
  box-sizing: border-box;
  min-height: 808rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.main-icon {
  position: absolute;
  left: 16rpx;
  top: 12rpx;
  width: 74rpx;
  height: 50rpx;
}
.main::after {
  content: ''; 
  position: absolute;
  width: 200%;
  height: 200%;
  border: 2rpx solid #EDF0F9;
  border-radius: 24rpx;
  top: 0;
  left: 0;
  transform: scale(.5);
  transform-origin: 0 0;
  box-sizing: border-box;
  /* z-index: -1; */
  /* background: antiquewhite; */
 }
 .main-top {
  padding: 0 28rpx;
 }
.main-title {
  height: 98rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
  /* border-bottom: 1rpx solid #ddd; */
