}
.play-btn {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #4B7BFE;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  position: relative;
  top: 25rpx;
  /* overflow: hidden; */
  z-index: 2;
  position: relative;
}
.play-btn::after {
  position: absolute;
  content: '';
  width: 68rpx;
  height: 88rpx;
  background: red;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
}
.play-btn-icon {
  width: 24rpx;
  height: 24rpx;
}
.play-btn__article {
  top: 0;
  margin-left: 32rpx;
}
.play-btn-img {
  width: 100%;
  height: 100%;
  /* background: red; */
}
.process {
  flex: 1;
  /* margin-right: 18rpx; */
  height: 6rpx;
  /* background: #EDF0F9;
  border-radius: 3rpx; */
  position: relative;
  top: 31rpx;
  z-index: 2;
}
.article-process {
  top: 0;
}
.article-process-time {
  color: #7A7A85;
  font-size: 22rpx;
  line-height: 30rpx;
  font-weight: 500;
  margin-left: 20rpx;
}
.bar-process {
  width: 100%;
  height: 100%;
  background: #EDF0F9;
  border-radius: 300rpx;
  position: absolute;
}
.bar-process::after {
  content: '';
  width: 100%;
  height: 600%;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(0, -50%);
  transform-origin: 0 0;
  /* background:red; */
}
.process-time {
  margin-top: 25rpx;
  display: flex;
  justify-content: space-between;
  color: #A1A3B3;
  font-size: 22rpx;
  font-weight: 500;
}
.mask-process {
  position: absolute;
  left: 0;
  top: 0;
  width: 0%;
  height: 100%;
  background-color: #C0D1FF;
  border-radius: 300rpx;
}
.mask-process::after {
  content: '';
  width: 100%;
  height: 600%;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(0, -50%);
  transform-origin: 0 0;
  /* background:red; */
}
.mark-process-btn {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  right: -36rpx;
  background-color: #4B7BFE;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-sizing: border-box;
  box-shadow: 0px 1rpx 12rpx -1rpx rgba(22, 83, 250, 0.3);
  z-index: 2;
}
.mark-process-btn__article {
  width: 80rpx;
  height: 32rpx;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  right: -80rpx;
  background: #4B7BFE;
  box-shadow: 0px 3rpx 6rpx rgba(22, 83, 250, 0.22);
  border-radius: 24rpx;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  line-height: 32rpx;
  font-weight: 500;
  letter-spacing: 0.4rpx
}
